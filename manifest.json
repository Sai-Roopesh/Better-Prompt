{
    "manifest_version": 3,
    "name": "Better Prompt Generator",
    "version": "1.0",
    "description": "Generates better prompts using LLM.",
    "permissions": ["storage", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "http://localhost:*",
      "http://127.0.0.1:*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  